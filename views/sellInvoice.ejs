<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 ml-5 mr-5 mb-3 border-bottom">
    <h1 class="h2">Tax Invoice</h1>
    <div class="page-tools">
        <div class="action-buttons">
            <button class="btn bg-white btn-light mx-1px text-95" data-title="Print" onclick="window.print()">
                <i class="mr-1 fa fa-print text-primary-m1 text-120 w-2"></i>
                Print
            </a>
            </button>
        </div>
    </div>
</div>
<div class="page-content container pb-3">
<!--     <div class="page-header text-blue-d2">
        <h1 class="page-title text-secondary-d1">
            Invoice
            <small class="page-info">
                <i class="fa fa-angle-double-right text-80"></i>
                ID: #111-222
            </small>
        </h1>
    </div> -->

    <div class="container px-0">
        <div class="row mt-4">
            <div class="col-12 col-lg-10 offset-lg-1">
                <!-- .row -->
                <h3 class="text-blue">Daxy - The Digital Taxi</h3>
                <hr class="row brc-default-l1 mx-n1 mb-4" />

                <div class="row">
                    <div class="col-sm-6">
                        <div>
                            <span class="text-600 text-110 text-blue align-middle">To: Akhil Subramanian</span>
                        </div>
                        <div class="text-grey-m2">
                            <div class="my-1">
                                11, E S Patanwala Street,
                            </div>
                            <div class="my-1">
                                Mumbai 400027, INDIA
                            </div>
                            <div class="my-1"><i class="fa fa-phone fa-flip-horizontal text-secondary"></i> <b class="text-600">(+91) 8669779007</b></div>
                        </div>
                    </div>
                    <!-- /.col -->

                    <div class="text-95 col-sm-6 align-self-start d-sm-flex justify-content-end">
                        <hr class="d-sm-none" />
                        <div class="text-grey-m2">
                            <div class="mt-1 mb-2 text-secondary-m1 text-600 text-125">
                                Invoice
                            </div>

                            <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">ID:</span> #111-222</div>

                            <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Issue Date:</span> Oct 12, 2019</div>

                            <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Status:</span> <span class="badge badge-warning badge-pill px-25">Unpaid</span></div>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>

                    <div class="container pt-4 pb-4 m-0">
                    <table class="table">
                        <thead>
                        <tr class="text-600 text-white bgc-default-tp1 py-25">
                            <th scope="col">Item</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price</th>
                            <th scope="col">Gst 18%</th>
                            <th scope="col">Amount</th>
                        </tr>
                        </thead>
                        <%  var totalAmount = 0, totalGst = 0; %>
                        <%   var custName; %>
                    <%  orderList.forEach(function(list) { %>
                    <%   custName = list.customerName; %>
                    <%   totalAmount += list.amount; %>
                    <%   totalGst += list.gst; %>
                        <tbody>
                        <tr class="mb-2 mb-sm-0 py-25 bgc-default-l4">
                                <td><%= list.item %></td>
                                <td><%= list.quantity %></td>
                                <td><%= list.price %></td>
                                <td>₹<%= list.gst %></td>
                                <td>₹<%= list.amount %></td>
                        </tr>
                        </tbody>
                    <%  }); %>
                    </table>
                    </div>


                    <div class="row border-b-2 brc-default-l2"></div>
                    <div class="row mt-3">
                        <div class="col-12 col-sm-7 text-grey-d2 text-95 mt-2 mt-lg-0">
                        </div>

                        <div class="col-12 col-sm-5 text-grey text-90 order-first order-sm-last">
                            <div class="row my-2 align-items-center bgc-primary-l3 p-2">
                                <div class="col-7 text-right">
                                    <h6>Total Gst: ₹<%= totalGst %></h6>
                                    <h6>Total Amount: ₹<%= totalAmount %></h6>
                                </div>
                                <div class="col-5">
                                    <span class="text-150 text-success-d3 opacity-2"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />
                    <form action="/orderHist" method="POST">
                        <div>
                            <input name="invoice" value=" <%= date %> " hidden>
                            <input name="custName" value=" <%= custName %> " hidden>
                            <input name="totalAmount" value=" <%= totalAmount %> " hidden>
                            <button type="submit" class="btn btn-primary btn-bold px-4 float-right mt-3 mt-lg-0">Proceed to checkout</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer") -%>